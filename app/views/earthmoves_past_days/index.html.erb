
<h1>Earthmoves Past Days</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">

      <thead>
        <tr>
          <th>Time</th>
          <th>Latitude</th>
          <th>Longitude</th>
          <th>Depth</th>
          <th>Mag</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @earthmoves_past_days.each do |earthmoves_past_day| %>
          <tr>
            <td><%= earthmoves_past_day.time %></td>
            <td><%= earthmoves_past_day.latitude %></td>
            <td><%= earthmoves_past_day.longitude %></td>
            <td><%= earthmoves_past_day.depth %></td>
            <td><%= earthmoves_past_day.mag %></td>
            <td><%= link_to 'Show', earthmoves_past_day %></td>
            <td><%= link_to 'Edit', edit_earthmoves_past_day_path(earthmoves_past_day) %></td>
            <td><%= link_to 'Destroy', earthmoves_past_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
</table>
</div>
</div>
<br>

<h3> Import Earthmoves_past_days</h3>
<%= form_tag import_earthmoves_past_days_path, multipart: true do %>
   <%= file_field_tag :file %> 
   <%= submit_tag "upload earthmoves_past_day " %>
<% end %>

<%= link_to 'New Earthmoves Past Day', new_earthmoves_past_day_path %>

<h4>My Web Page</h4>

<div id="piechart"></div>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<script type="text/javascript">
// Load google charts
google.charts.load('current', {'packages':['corechart']});
google.charts.setOnLoadCallback(drawChart);

// Draw the chart and set the chart values
function drawChart() {
  var data = google.visualization.arrayToDataTable([
  ['Task', 'Hours per Day'],
  ['Work', 8],
  ['Eat', 2],
  ['TV', 4],
  ['Gym', 2],
  ['Sleep', 8]
]);

  // Optional; add a title and set the width and height of the chart
  var options = {'title':'My Average Day', 'width':550, 'height':400};

  // Display the chart inside the <div> element with id="piechart"
  var chart = new google.visualization.PieChart(document.getElementById('piechart'));
  chart.draw(data, options);
}
</script>

